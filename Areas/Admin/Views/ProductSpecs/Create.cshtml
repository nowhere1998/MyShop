@model MyShop.Models.ProductSpec

@{
    ViewData["Title"] = "Thêm thông số sản phẩm";
}

<div class="container mt-4" style="max-width: 900px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary mb-0">Thêm Thông Số Sản Phẩm</h3>
    </div>

    <form asp-area="Admin"
          asp-controller="ProductSpecs"
          asp-action="Create"
          method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <!-- Chọn sản phẩm -->
            <div class="col-md-6 mb-3">
                <label asp-for="ProductId" class="form-label fw-semibold"></label>
                <select asp-for="ProductId"
                        class="form-select"
                        asp-items="ViewBag.ProductId">
                    <option value="">-- Chọn sản phẩm --</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <!-- Tên thông số -->
            <div class="col-md-6 mb-3">
                <label asp-for="SpecName" class="form-label fw-semibold"></label>
                <input asp-for="SpecName"
                       class="form-control"
                       placeholder="Ví dụ: RAM, CPU, Màn hình..." />
                <span asp-validation-for="SpecName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <!-- Giá trị thông số -->
            <div class="col-md-12 mb-3">
                <label asp-for="SpecValue" class="form-label fw-semibold"></label>
                <input asp-for="SpecValue"
                       class="form-control"
                       placeholder="Ví dụ: 16GB, Intel i7, 6.5 inch..." />
                <span asp-validation-for="SpecValue" class="text-danger"></span>
            </div>
        </div>

        <div class="text-end mt-4">
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="fas fa-arrow-left"></i> Trở lại
            </a>

            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Lưu lại
            </button>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
