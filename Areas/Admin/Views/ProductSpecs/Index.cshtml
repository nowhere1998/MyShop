@model IEnumerable<MyShop.Models.ProductSpec>

@{
    ViewData["Title"] = "Thông số sản phẩm";
}


<body class="bg-light">
    <main class="py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="text-primary">Thông số sản phẩm</h3>

            <a asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i> Thêm mới
            </a>
        </div>

        <form method="get"
              asp-area="Admin"
              asp-controller="ProductSpecs"
              asp-action="Index"
              class="mb-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <!-- nút submit là icon search -->
                    <button type="submit" class="btn btn-primary" title="Tìm kiếm">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <input type="text"
                       name="name"
                       value="@ViewBag.searchName"
                       class="form-control"
                       placeholder="Tìm theo tên..." />
            </div>
        </form>

        <table class="table table-hover align-middle" style="border-collapse:collapse;">
            <thead class="table-primary">
                <tr style="border-bottom:2px solid #cfd4da;">
                    <th>Tên thông số</th>
                    <th>Giá trị</th>
                    <th>Sản phẩm</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom:1px solid #dee2e6;">
                        <td>@item.SpecName</td>

                        <td>@item.SpecValue</td>

                        <td>
                            @item.Product?.Name
                        </td>

                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary me-1"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               title="Chỉnh sửa">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-sm btn-outline-danger"
                               asp-action="Delete"
                               asp-route-id="@item.Id"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa?');"
                               title="Xóa">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">

                @if (ViewBag.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page - 1 })">«</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = i })">@i</a>
                    </li>
                }

                @if (ViewBag.Page < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page + 1 })">»</a>
                    </li>
                }

            </ul>
        </nav>
     
    </main>
</body>
