@model IEnumerable<MyShop.Models.Dealer>

@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
}

<main class="py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary">Danh sách nhà cung cấp</h3>

        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Thêm mới
        </a>
    </div>
    <form method="get"
          asp-area="Admin"
          asp-controller="Dealers"
          asp-action="Index"
          class="mb-3">
        <div class="input-group">
            <div class="input-group-prepend">
                <!-- nút submit là icon search -->
                <button type="submit" class="btn btn-primary" title="Tìm kiếm">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <input type="text"
                   name="name"
                   value="@ViewBag.searchName"
                   class="form-control"
                   placeholder="Tìm theo tên..." />
        </div>
    </form>
    <table class="table table-hover align-middle">
        <thead class="table-primary">
            <tr>
                <th>Tên đại lý</th>
                <th>Người liên hệ</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Khu vực</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.ContactPerson</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>
                            <span class="badge bg-info">
                                @item.Region
                            </span>
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary me-1"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               title="Sửa">
                                <i class="fa fa-edit"></i>
                            </a>


                            <form asp-action="Delete"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa không?')">
                                <button class="btn btn-sm btn-outline-danger" title="Xóa">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center text-muted">
                        Không có dữ liệu
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            @if (ViewBag.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page - 1 })">«</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = i })">@i</a>
                </li>
            }

            @if (ViewBag.Page < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page + 1 })">»</a>
                </li>
            }

        </ul>
    </nav>
</main>
