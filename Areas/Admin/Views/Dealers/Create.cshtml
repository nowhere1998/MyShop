@model MyShop.Models.Dealer

@{
    ViewData["Title"] = "Thêm nhà cung cấp";
}

<div class="container py-4">

    <!-- Title + Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-uppercase text-primary">
            Thêm nhà cung cấp
        </h4>
    </div>

    <!-- Form -->
    <form asp-action="Create" method="post" id="dealerForm">

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold">Tên nhà cung cấp</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Người liên hệ</label>
                <input asp-for="ContactPerson" class="form-control" />
                <span asp-validation-for="ContactPerson" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label fw-semibold">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Khu vực</label>
            <input asp-for="Region" class="form-control" />
            <span asp-validation-for="Region" class="text-danger"></span>
        </div>

        <!-- Actions bottom -->
        <div class="d-flex justify-content-end gap-2">
            <button type="submit" class="btn btn-success mr-2">
                <i class="fas fa-save"></i> Lưu lại
            </button>
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Trở lại
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
