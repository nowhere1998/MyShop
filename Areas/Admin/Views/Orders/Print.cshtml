@model MyShop.Models.Order
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hóa đơn - @Model.OrderCode</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-size: 14px;
            background: #fff;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }

        @@media print {
            .no-print {
                display: none !important;
            }

            @@page {
                size: A4;
                margin: 15mm;
            }
        }

        table th, table td {
            border: 1px solid #000;
            padding: 6px;
        }

        table {
            border-collapse: collapse;
        }
    </style>
</head>
<body onload="window.print()">

<div class="invoice-box">

    <!-- HEADER -->
    <div class="text-center mb-4">
        <h3 class="fw-bold mb-1">MYSHOP</h3>
        <div>Website: myshop.com</div>
        <div>Hotline: 0123 456 789</div>
        <hr />
    </div>

    <!-- THÔNG TIN ĐƠN -->
    <div class="row mb-3">
        <div class="col">
            <strong>Mã đơn:</strong> @Model.OrderCode <br />
            <strong>Ngày đặt:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy")
        </div>
        <div class="col text-end">
            <strong>Trạng thái:</strong> @Model.OrderStatus
        </div>
    </div>

    <!-- KHÁCH HÀNG -->
    <h6 class="fw-bold">Thông tin khách hàng</h6>
    <div>
        <strong>Họ tên:</strong> @Model.FullName <br />
        <strong>SĐT:</strong> @Model.Phone <br />
        <strong>Email:</strong> @Model.Email <br />
        <strong>Địa chỉ:</strong> @Model.ShippingAddress
    </div>

    <hr />

    <!-- SẢN PHẨM -->
    <table class="table table-sm">
        <thead class="text-center">
            <tr>
                <th>Tên sản phẩm</th>
                <th width="80">SL</th>
                <th width="120">Giá</th>
                <th width="140">Thành tiền</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td class="text-center">@item.Quantity</td>
                <td class="text-end">@item.Product.Price?.ToString("N0") đ</td>
                <td class="text-end">
                            @(((decimal)(item.Quantity * item.Product.Price.GetValueOrDefault())).ToString("N0")) đ
                </td>
            </tr>
        }
        </tbody>
    </table>

    <!-- TỔNG TIỀN -->
    <div class="row mt-3">
        <div class="col-6 offset-6">
            <table class="table table-sm">
                <tr>
                    <td>Tạm tính</td>
                    <td class="text-end">@Model.SubtotalAmount?.ToString("N0") đ</td>
                </tr>
                <tr>
                    <td>Giảm giá</td>
                    <td class="text-end text-danger">
                        -@Model.DiscountAmount?.ToString("N0") đ
                    </td>
                </tr>
                <tr>
                    <td>Phí giao hàng</td>
                    <td class="text-end">@Model.ShippingFee?.ToString("N0") đ</td>
                </tr>
                <tr class="fw-bold">
                    <td>Tổng cộng</td>
                    <td class="text-end text-success">
                        @Model.TotalAmount?.ToString("N0") đ
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <!-- FOOTER -->
    <div class="text-center mt-4">
        <p>Cảm ơn quý khách đã mua hàng!</p>
        <button onclick="window.print()" class="btn btn-primary no-print">
            In lại hóa đơn
        </button>
    </div>

</div>

</body>
</html>
