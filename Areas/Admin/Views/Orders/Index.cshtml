@model IEnumerable<MyShop.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<body class="bg-light">

    <main class="py-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="text-primary">Danh sách đơn hàng</h3>

        </div>

        <form method="get"
              asp-area="Admin"
              asp-controller="Orders"
              asp-action="Index"
              class="mb-3">
            <div class="input-group">
                <div class="input-group-prepend">
                    <!-- nút submit là icon search -->
                    <button type="submit" class="btn btn-primary" title="Tìm kiếm">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <input type="text"
                       name="name"
                       value="@ViewBag.searchName"
                       class="form-control"
                       placeholder="Tìm theo tên..." />
            </div>
        </form>

        <table class="table table-hover align-middle" style="border-collapse:collapse;">
            <thead class="table-primary">
                <tr style="border-bottom:2px solid #cfd4da;">
                    <th>@Html.DisplayNameFor(m => m.First().OrderCode)</th>
                    <th>@Html.DisplayNameFor(m => m.First().FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.First().Phone)</th>
                    <th>@Html.DisplayNameFor(m => m.First().OrderStatus)</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="border-bottom:1px solid #dee2e6;">
                        <td>@item.OrderCode</td>
                        <td>@item.FullName</td>
                        <td>@item.Phone</td>
                        <td>
                            @if (item.OrderStatus == "pending")
                            {
                                <span class="badge bg-warning">Chờ xử lý</span>
                            }
                            else if (item.OrderStatus == "shipping")
                            {
                                <span class="badge bg-primary">Đang giao</span>
                            }
                            else if (item.OrderStatus == "completed")
                            {
                                <span class="badge bg-success">Hoàn thành</span>
                            }
                            else if (item.OrderStatus == "cancelled")
                            {
                                <span class="badge bg-danger">Đã hủy</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.OrderStatus</span>
                            }
                        </td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-primary me-1"
                               asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">

                @if (ViewBag.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page - 1 })">«</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = i })">@i</a>
                    </li>
                }

                @if (ViewBag.Page < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { name = ViewBag.searchName, page = ViewBag.Page + 1 })">»</a>
                    </li>
                }

            </ul>
        </nav>
    </main>
</body>